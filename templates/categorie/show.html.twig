{% extends 'base.html.twig' %}

{% block body %}
<br><br> <br><br>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Categorie</h1>

                        <dl class="row">
                            <dt class="col-sm-3">Id</dt>
                            <dd class="col-sm-9">{{ categorie.id }}</dd>

                            <dt class="col-sm-3">Nom Categorie</dt>
                            <dd class="col-sm-9">{{ categorie.nomCategorie }}</dd>
                        </dl>

                        <div class="mt-3">
                            <a href="{{ path('categories') }}" class="btn btn-primary btn-block">Back to list</a>
                            <a href="{{ path('categorie_update', {'id': categorie.id}) }}" class="btn btn-warning btn-block mt-3">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
