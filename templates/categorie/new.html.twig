{% extends 'base.html.twig' %}

{% block body %}
<br><br> <br><br>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Create New Categorie</h1>

                        {{ form_start(form) }}
