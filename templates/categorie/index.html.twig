{# templates/categorie/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<br><br> <br><br>
    <div class="container mt-5">
        <h1>Categories</h1>

        <form action="{{ path('categories') }}" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by category name">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom Categorie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in pagination %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.nomCategorie }}</td>
                        <td>
                            <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('categorie_update', {'id': categorie.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                            <a class="btn btn-danger btn-sm" href="{{ path('categorie_delete', {'id': categorie.id}) }}"
                               onclick="return confirm('Are you sure to delete {{ categorie.nomCategorie }}?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <div>
                {{ knp_pagination_render(pagination) }}
            </div>
            <div>
                <a href="{{ path('categorie_new') }}" class="btn btn-success">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
