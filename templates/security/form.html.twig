{% extends 'base.html.twig' %}

{% block body %}
<!DOCTYPE html>
<!-- Coding by CodingNepal | www.codingnepalweb.com-->
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <title> Login and Registration Form in HTML & CSS | CodingLab </title>
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container">
      <input type="checkbox" id="flip">
      <div class="cover">
        <div class="front">
          <img src="https://img.freepik.com/vecteurs-premium/concept-conception-illustration-inscription-ligne-pour-pages-destination-sites-web-autres_108061-938.jpg" alt="">
          <div class="text">
            <span class="text-1">Every new friend is a <br> new adventure</span>
            <span class="text-2">Let's get connected</span>
          </div>
        </div>
        <div class="back">
          <!--<img class="backImg" src="images/backImg.jpg" alt="">-->
          <div class="text">
            <span class="text-1">Complete miles of journey <br> with one step</span>
            <span class="text-2">Let's get started</span>
          </div>
        </div>
      </div>
      <div class="forms">
        <div class="form-content">
          <div class="signup-form">
            <div class="title">Signup</div>
            {{ form_start(form) }}
            <div class="input-boxes">
                <div class="input-box">
                    <i class="fas fa-user"></i>
                    {{ form_row(form.username, { 'label': false, 'attr': {'placeholder': 'Enter your username'}}) }}
                </div>
                <div class="input-box">
                    <i class="fas fa-envelope"></i>
                    {{ form_row(form.email, { 'label': false, 'attr': {'placeholder': 'Enter your email'}}) }}
                </div>
                <div class="input-box">
                    <i class="fas fa-lock"></i>
                    {{ form_row(form.plainPassword.first, { 'label': false, 'attr': {'placeholder': 'Enter your password'}}) }}
                </div>
                <div class="input-box">
                    <i class="fas fa-lock"></i>
                    {{ form_row(form.plainPassword.second, { 'label': false, 'attr': {'placeholder': 'Confirm password'}}) }}
                </div>
                <div class="button input-box">
                    <input type="submit" value="Submit">
                </div>
                <div class="text sign-up-text">Already have an account? <label for="flip"><a href="{{ path('login') }}">Login now</a></label></div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
{% endblock %}
